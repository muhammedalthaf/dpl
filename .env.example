# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Configuration (Required)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Database name (Optional - defaults to calcutta_cricket_league)
DATABASE_NAME=calcutta_cricket_league

# API URL for frontend (Required for production)
VITE_API_URL=https://your-domain.com/api

# Ports (Optional - defaults shown)
API_PORT=8019
FRONTEND_PORT=8020

